generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  name        String
  description String
  completed   Boolean
  dueDate     DateTime
  doDate      DateTime
  emergency   Boolean
  locational  Boolean
  storyPoints Int
  priority    Int
  ordering    Decimal

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User    @relation(fields: [userId], references: [id])
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
}

model Project {
  id            String  @id @default(cuid())
  name          String
  description   String
  color         String
  schoolRelated Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks Task[]
}
